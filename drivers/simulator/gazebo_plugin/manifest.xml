<package>
  <description brief="Gazebo Plugins for Personal Robots">
    Gazebo Plugins for various sensors and actuators on the PR2 robot.
    This module also contains a test file for Player interface.
  </description>
  <author>Sachin Chitta, Stu Glaser, John Hsu</author>
  <license>BSD</license>
  <review status="API conditionally cleared" notes="Tully to code review"/>
  <url>http://pr.willowgarage.com/wiki/gazebo_plugin</url>
  <depend package="gazebo"/>
  <depend package="opende"/>
  <depend package="newmat10"/>
  <depend package="robot_mechanism_controllers"/>
  <depend package="pr2_mechanism_controllers"/>
  <depend package="roscpp"/>
  <depend package="std_msgs" />
  <depend package="pr2_msgs" />
  <depend package="robot_msgs" />
  <depend package="stl_utils" />
  <depend package="angles" />
  <depend package="gazebo_robot_description"/>
  <depend package="hardware_interface" />
  <depend package="mechanism_control" />
  <depend package="mechanism_model" />
  <depend package="tinyxml" />
  <depend package="axis_cam" />
  <depend package="bullet" />
  <depend package="wg_robot_description_parser" />
  <export>
    <cpp cflags="-I${prefix}/include" lflags="-Wl,-rpath,${prefix}/lib -L${prefix}/lib" />
  </export>
  <sysdepend os="ubuntu" version="8.04-hardy" package="python-numpy"/>
  <sysdepend os="ubuntu" version="7.10-gutsy" package="python-numpy"/>
</package>

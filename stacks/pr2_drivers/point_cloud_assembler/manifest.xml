  </description>
  <author>Caroline Pantofaru, Jeremy Leibs, Vijay Pradeep</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://pr.willowgarage.com/wiki/point_cloud_assembler</url>
  <depend package="roscpp"/>
  <depend package="std_msgs"/>
  <depend package="robot_msgs"/>
  <depend package="laser_scan"/>
  <depend package="tf"/>
  <depend package="pr2_srvs"/>
  <depend package="pr2_mechanism_controllers"/>
  # For Testing
  <depend package="rostest"/>
  <depend package="gtest"/>

 <export>
    <cpp cflags="-I${prefix}/srv/cpp -I${prefix}/include" />
 </export>

</package>

